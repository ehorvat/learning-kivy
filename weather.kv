#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

WeatherRoot:

<WeatherRoot>:
	location_form: add_location_form
	AddLocationForm:
		id: add_location_form

<AddLocationForm>:
	orientation: "vertical"
	search_input: search_box
	long_input: long_box
	lat_input: lat_box
	search_results: search_results_list
	BoxLayout:
		height: "40dp"
		size_hint_y: None
		TextInput:
			id: search_box
			size_hint_x: 25
			hint_text: "City"
			multiline: False
			on_text_validate: root.search_location()
		TextInput:
			id: long_box
			size_hint_x: 25
			hint_text: "Longitude"
		TextInput:
			id: lat_box
			size_hint_x: 25
			hint_text: "Latitude"
		Button:
			text: "Serach"
			size_hint_x: 25
			on_press: root.search_location()
		Button:
			text: "Current Location"
			size_hint_x: 25
	ListView:
		id: search_results_list
		adapter:
			ListAdapter(data=[], cls=main.LocationButton)

<LocationButton>:
	on_press: app.root.show_current_weather(self.text)
	selected_color: 0,0,1,1
	deselected_color: .7,.8,.91,1

<CurrentWeather@BoxLayout>:
	location: ""
	conditions: None
	temp: None
	temp_min: None
	temp_max: None
	orientation: "vertical"
	Label:
		text: root.location
	BoxLayout:
		orientation: "horizontal"
		size_hint_y: None
		height: "40dp"
		Button:
			text: "Add Location"
			on_press: app.root.show_location_form()
		Button:
			text: "Forecast"
